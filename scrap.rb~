require 'rubygems'
require 'mechanize'

def getPage(url,agent)
	page = agent.get(url)
	page.form('form1')
end

def getList(select,form)
	form.field_with(:name => select).options
end

agent = Mechanize.new
agent.user_agent_alias = 'Mac Safari'
agent.follow_meta_refresh=true
form = getPage('http://210.212.18.115:8880/default2.aspx',agent)
list1 =  getList('DropDownList1',form)
list1.each do |option1|
	option1.click
	agent.submit(form)	
end
